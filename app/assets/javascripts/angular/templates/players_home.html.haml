%div(filter_options)
%div(players_graph)
%table.table.table-striped.table-hover
  %tbody
    %tr
      %th
      %th.table-bordered{:colspan => 5} Passing
      %th{:colspan => 3} Rushing
      %th{:colspan => 4} Receiving
    %tr
      %th Player
      %th Yards
      %th TDs
      %th Int
      %th Att
      %th Comp
      %th Yards
      %th TDs
      %th Att
      %th Yards
      %th TDs
      %th Rec
      %th Tar
    %tr(ng-repeat="player in vm.players")>
      %td
        %div(single_player)
      %td {{player.passing_yds}}
      %td {{player.passing_tds}}
      %td {{player.passing_int}}
      %td {{player.passing_attempts}}
      %td.border-right {{player.passing_completions}}
      %td {{player.rushing_yds}}
      %td {{player.rushing_tds}}
      %td.border-right {{player.rushing_att}}
      %td {{player.receiving_yds}}
      %td {{player.receiving_tds}}
      %td {{player.receiving_rec}}
      %td.border-right {{player.receiving_tar}}
      %td {{player.total_points}}
      %td {{player.games_played}}
      %td(vorp player="player")

